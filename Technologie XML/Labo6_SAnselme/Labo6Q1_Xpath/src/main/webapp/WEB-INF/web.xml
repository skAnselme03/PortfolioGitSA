<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>Labo6Q1_Xpath</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Servlet de controle de l'affichage des pokemon selon la technologie XPath</description>
    <display-name>PokemonInfoServlet</display-name>
    <servlet-name>PokemonInfoServlet</servlet-name>
    <servlet-class>org.cegep.gg.controleur.PokemonInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PokemonInfoServlet</servlet-name>
    <url-pattern>/pokemonInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet pour controler l'affichage des pokemons expérimentés</description>
    <display-name>PokemonExpInfoServlet</display-name>
    <servlet-name>PokemonExpInfoServlet</servlet-name>
    <servlet-class>org.cegep.gg.controleur.PokemonExpInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PokemonExpInfoServlet</servlet-name>
    <url-pattern>/pokemonInfoExp</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet pour controler l'affichage statistique des Pokemons</description>
    <display-name>PokemonInfoStatServlet</display-name>
    <servlet-name>PokemonInfoStatServlet</servlet-name>
    <servlet-class>org.cegep.gg.controleur.PokemonInfoStatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PokemonInfoStatServlet</servlet-name>
    <url-pattern>/pokemonInfoStat</url-pattern>
  </servlet-mapping>
</web-app>